{% extends "_base.twig" %}

{% block head %}
    {{ parent() }}

    <script>
        const bars = [];
        const ctx = [];
        const results = [];

        window.onload = () => {
            let i = -1;

            results.forEach((unit, repoIndex) => {
                unit.forEach((result, unitIndex) => {
                    i++;

                    ctx[i] = document.getElementById("canvas_"+repoIndex+"_"+unitIndex).getContext("2d");

                    bars[i] = new Chart(ctx[i], {
                        type: 'boxplot',
                        data: result,
                        options: {
                            scales: {
                                x: {
                                    position: 'top'
                                },
                            },
                            indexAxis: 'y',
                            responsive: true,
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'Box Plot Chart'
                            }
                        }
                    });
                });
            });

            console.log(ctx, results);
        };
    </script>
{% endblock %}

{% block content %}
    {# {% set canvasIndex = 0 %} #}

    {% for repository in repositories %}
        {% include "_repository.twig" %}
    {% endfor %}
{% endblock %}
